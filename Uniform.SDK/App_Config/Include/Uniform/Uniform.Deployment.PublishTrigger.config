    <pipelines>      
      <publish>
        <processor type="Uniform.Pipelines.Publish.VerifyUniformService, Uniform.Deployment.Core"
                   patch:before="*" />

        <processor type="Uniform.Pipelines.Publish.ClearUniformCaches, Uniform.Deployment.Core"
                   patch:before="*" />
        
